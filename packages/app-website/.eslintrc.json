{
  "extends": [
    "react-app",
    "standard",
    "standard-react",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      "semi": false,
      "singleQuote": true,
      "jsxSingleQuote": true
    }]
  }
}
